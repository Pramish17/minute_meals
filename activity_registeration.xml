<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register1"
    tools:context=".Registeration">

    <LinearLayout
        android:layout_width="638dp"
        android:layout_height="876dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="500dp"
            android:layout_height="100dp"
            android:background="#BEFFEB3B"
            android:fontFamily="cursive"
            android:text="Please Register Here!!"
            android:textColor="#00090C"
            android:textColorHint="#FFEB3B"
            android:textSize="35dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/registerUsername"
            android:layout_width="500dp"
            android:layout_height="100dp"
            android:background="#A4FFFFFF"
            android:ems="10"
            android:fontFamily="cursive"
            android:hint="UserName*"
            android:inputType="textPersonName"
            android:textColor="#0E0E0E"
            android:textColorHint="#F44336"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/registerPassword"
            android:layout_width="500dp"
            android:layout_height="100dp"
            android:background="#A4FFFFFF"
            android:ems="10"
            android:fontFamily="cursive"
            android:hint="Password*"
            android:inputType="textPassword"
            android:textColorHint="#F44336"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/reTypePassword"
            android:layout_width="500dp"
            android:layout_height="100dp"
            android:background="#A4FFFFFF"
            android:ems="10"
            android:fontFamily="cursive"
            android:hint="Retype Password*"
            android:inputType="textPassword"
            android:textColorHint="#F44336"
            android:textSize="30dp" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="500dp"
            android:layout_height="100dp"
            android:background="#BEFFEB3B"
            android:fontFamily="cursive"
            android:text="Register"
            android:textColorHint="#FFEB3B"
            android:textSize="20dp"
            android:textStyle="bold"
            app:backgroundTint="#BEFFEB3B" />

        <Button
            android:id="@+id/nextPage"
            android:layout_width="500dp"
            android:layout_height="100dp"
            android:background="#8BC34A"
            android:fontFamily="cursive"
            android:text="Existing User? Go to Login Page"
            android:textColorHint="#FFEB3B"
            android:textSize="20dp"
            app:backgroundTint="#8BC34A" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>