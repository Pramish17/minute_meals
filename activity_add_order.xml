<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/addorder1"
    tools:context=".AddOrder">

    <LinearLayout
        android:layout_width="478dp"
        android:layout_height="845dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="470dp"
            android:layout_height="85dp"
            android:fontFamily="cursive"
            android:text="Please place an order!!"
            android:textColor="#050000"
            android:textSize="40dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/Item"
            android:layout_width="364dp"
            android:layout_height="100dp"
            android:ems="10"
            android:fontFamily="cursive"
            android:hint="Item*"
            android:inputType="textPersonName"
            android:textColorHint="#E30808"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/quantity"
            android:layout_width="364dp"
            android:layout_height="100dp"
            android:ems="10"
            android:fontFamily="cursive"
            android:hint="Quantity*"
            android:inputType="textPersonName"
            android:textColorHint="#F30606"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="364dp"
            android:layout_height="100dp"
            android:ems="10"
            android:fontFamily="cursive"
            android:hint="Phone No*"
            android:inputType="textPersonName"
            android:textColorHint="#F60A0A"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/description"
            android:layout_width="364dp"
            android:layout_height="100dp"
            android:ems="10"
            android:fontFamily="cursive"
            android:hint="Description"
            android:inputType="textPersonName"
            android:textColorHint="#F80C0C"
            android:textSize="30dp" />

        <Button
            android:id="@+id/btnPlaceOrder"
            android:layout_width="364dp"
            android:layout_height="89dp"
            android:background="#6AE1D0D0"
            android:fontFamily="cursive"
            android:text="Place Order"
            android:textColor="#0B0000"
            android:textSize="35dp"
            android:textStyle="bold"
            app:backgroundTint="#AEF8F3F3" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>