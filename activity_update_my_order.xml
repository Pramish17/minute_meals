<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/addorder1"
    tools:context=".UpdateMyOrder">

    <LinearLayout
        android:layout_width="478dp"
        android:layout_height="845dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="470dp"
            android:layout_height="85dp"
            android:fontFamily="cursive"
            android:text="Please update an order!!"
            android:textColor="#050000"
            android:textSize="40dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/updateId"
            android:layout_width="364dp"
            android:layout_height="100dp"
            android:ems="10"
            android:fontFamily="cursive"
            android:hint="Id*"
            android:inputType="textPersonName"
            android:textColorHint="#FB0606"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/updateItem"
            android:layout_width="364dp"
            android:layout_height="100dp"
            android:ems="10"
            android:fontFamily="cursive"
            android:hint="Item*"
            android:inputType="textPersonName"
            android:textColorHint="#FD0606"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/updateQuantity"
            android:layout_width="364dp"
            android:layout_height="100dp"
            android:ems="10"
            android:fontFamily="cursive"
            android:hint="Quantity*"
            android:inputType="textPersonName"
            android:textColorHint="#F30B0B"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/updatePhone"
            android:layout_width="364dp"
            android:layout_height="100dp"
            android:ems="10"
            android:fontFamily="cursive"
            android:hint="Phone No*"
            android:inputType="textPersonName"
            android:textColorHint="#F80808"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/updateDescription"
            android:layout_width="364dp"
            android:layout_height="100dp"
            android:ems="10"
            android:fontFamily="cursive"
            android:hint="Description"
            android:inputType="textPersonName"
            android:textColorHint="#FB0707"
            android:textSize="30dp" />

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="364dp"
            android:layout_height="100dp"
            android:fontFamily="cursive"
            android:text="Update Order"
            android:textColor="#0C0000"
            android:textStyle="bold"
            app:backgroundTint="#C9FDFAFA"
            app:layout_constraintBottom_toBottomOf="parent" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>